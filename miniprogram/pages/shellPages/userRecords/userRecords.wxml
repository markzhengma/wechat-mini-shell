<!-- miniprogram/pages/shellPages/userRecords/userRecords.wxml -->
<text>
	欢迎，
	<text>{{userData.user_name}}</text>
</text>
<text>
	换油证号：
	<text>{{userData.record_num}}</text>
</text>
<text>
	联系电话：
	<text>{{userData.phone}}</text>
</text>
<text>
	车牌号：
	<text>{{userData.plate}}</text>
</text>
<text>
	车型：
	<text>{{userData.make}}</text>
</text>
<view wx:if="{{userRecords != []}}">
	<modal title="记录详情" no-cancel="true" hidden="{{detailHidden}}" bindconfirm="modalChange">
		<view class="tr bg-w">日期：{{selectedRecord.date}}</view>
		<view class="tr bg-g">产品名称：{{selectedRecord.product_name}}</view>
		<view class="tr bg-w">表示里程：{{selectedRecord.milage}}</view>
		<view class="tr bg-g">赠品情况：{{selectedRecord.gift}}</view>
		<view class="tr bg-w">操作人：{{selectedRecord.operator}}</view>
		<view class="tr bg-g">备注：{{selectedRecord.detail}}</view>
	</modal>
	<scroll-view wx:if="{{userRecords}}" class="table">
		<view class="tr bg-w">
			<view class="th">日期</view>
			<view class="th">产品名称</view>
			<view class="th ">表示里程</view>
		</view>
		<block wx:for="{{userRecords}}" wx:key="unique">
			<view bindtap="showRecordDetail" id="{{index}}" class="tr bg-w" wx:if="{{index % 2 == 0}}">
				<view wx:if="{{item.date}}" class="td">{{item.date}}</view>
				<view wx:if="{{item.product_name}}" class="td">{{item.product_name}}</view>
				<view wx:if="{{item.milage}}" class="td">{{item.milage}}</view>
			</view>
			<view bindtap="showRecordDetail" id="{{index}}" class="tr bg-g" wx:else>
				<view wx:if="{{item.date}}" class="td">{{item.date}}</view>
				<view wx:if="{{item.product_name}}" class="td">{{item.product_name}}</view>
				<view wx:if="{{item.milage}}" class="td">{{item.milage}}</view>
			</view>
		</block>
	</scroll-view>
	<!-- </scroll-view> -->
</view>
<view wx:else="{{userRecords == []}}">未找到保养记录</view>