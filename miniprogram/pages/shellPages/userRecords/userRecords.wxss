/* miniprogram/pages/shellPages/userRecords/userRecords.wxss */
.scroll-parent{
  width: 100%;
  white-space: nowrap;
}
.user-table {
  margin: 10px 0;
}
.user-tr {
  /* display: flex;
  justify-content: center;
  height: 3rem;
  align-items: center; */
  display: inline-block;
  height: 100%;
}
.user-th {
  width: 120px;
  justify-content: center;
  background: #808080;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.user-td {
  width: 120px;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.user-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 96%;
  height: 50px;
  margin-bottom: 20px;
  border-bottom: grey 1px solid;
}
.wx-btn{
  background-color: #73bd3e;
  color: white;
  border-radius: 5px;
  margin: 4px 0;
}
#userpage-logo {
  height: 40px;
  width: 40px;
  margin-left: 10px;
}

.user-title{
  width: fit-content;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: large;
  color: grey;
}
.avatar {
  height: 40px;
  width: 40px;
  border-radius: 4px;
  background-color: rgb(216, 216, 216);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  margin-left: 10px;
  margin-right: 10px;
}

.user-info{
  margin: 10px 0;
  padding: 10px 0;
  width: 80%;
  color: grey;
}
.user-info-label{
  height: 20px;
  width: 20px;
  margin-right: 10px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.user-info-text{
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user-table-container{
  margin-bottom: 60px;
}
.user-contact-btn{
  width: 100%;
  background-color: rgb(229, 230, 225);
  color: grey;
  border-radius: 0;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-top: 5px;
  background-color: #f8d148;
}
.user-hint{
  margin: 10px;
  color: grey;
}
