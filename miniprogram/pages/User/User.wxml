<view >
  <view wx:if="{{!isLoggedIn}}" >
    <van-empty description="未登录，无法获取您的信息">
      <van-button 
        round 
        type="primary" 
        data-path="/pages/index/index"
        bind:click="switchPage">
        回首页登录
      </van-button>
    </van-empty>
  </view>
  <view 
    style="display: flex; flex-direction: column; align-items: center"
    wx:else
  >
    <view 
      style="width: 80%; background-color: white; border-radius: 8px; margin: 12px 0;padding: 6px; display: flex; flex-direction: row; align-items: center"
      >
      <view >
        <van-icon name="user" size="36px" color="#f8d148" />
      </view>
      <view style="font-size: 16px; margin-left: 10px">
        {{userData.user_name}}
      </view>
    </view>
    <van-divider/>
    <view style="width: 90%; display: flex; flex-direction: column">
      <van-cell-group 
        inset
        style="width: 100%, margin: 0">
        <van-cell 
          title="车型" 
          value="{{userData.make}}" 
        />
        <van-cell 
          title="车牌号" 
          value="{{userData.plate}}" 
        />
        <van-cell 
          title="手机号码" 
          value="{{userData.phone}}" 
        />
        <van-cell 
          title="换油证号" 
          value="{{userData.record_num}}" 
        />
      </van-cell-group>
    </view>
    <van-cell-group 
      inset
      style="width: 90%;margin-top: 6px"
      >
      <van-cell>
        <van-button 
          icon="phone-o" 
          size="large"
          disabled
          custom-style="margin: 6px 0; background-color: #f8d148"
        >
        联系我们
        </van-button>
      </van-cell>
    </van-cell-group>
    <van-divider contentPosition="center">
      更多功能敬请期待
    </van-divider>
    
  </view>
</view>