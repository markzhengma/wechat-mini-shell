<!--index.wxml-->
<view>
  <swiper 
    style="height: 360px"
		indicator-dots="false" 
		autoplay="true" 
    interval="10000"
    duration="2000"
    indicator-active-color="#f8d148"
    circular="true"
  >
    <block 
      wx:for="{{bannerList}}" 
      wx:key="unique"
      style="height: 100%"
    >
      <swiper-item
        style="background-image: url({{item.thumb_url}}); background-position: center top; background-size: cover; background-repeat: no-repeat; -webkit-mask-image:-webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(0,0,0,1)), color-stop(70%, rgba(0,0,0,1)), color-stop(100%, rgba(0,0,0,0))); mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 70%, rgba(0,0,0,0)) 100%;"
        data-url="{{item.url}}"
        bind:tap="openWxArticle"
      />
    </block>
  </swiper>

  <!-- 已登录 -->
  <view 
    wx:if="{{isLoggedIn}}" 
    style="margin-top: -80px"
  >
    <view style="display: flex; flex-direction: column" wx:if="{{uidIsInDB}}">
      <van-cell-group 
        inset
        style="margin-top: 6px"
        >
        <van-cell
          center="true"
        >
          <view slot="title">
            <van-row 
              style="font-size: 16px; height: 18px"
            >
              <van-col>
                <van-icon 
                  name="/icons/car.png"
                  size="20px"
                  style="padding-top: 2px"
                />
              </van-col>
              <van-col>
                <view style="margin-left: 6px; margin-right: 10px">
                  {{userData.make ? userData.make : ''}}
                </view>
              </van-col>
              <van-col>
                <van-tag 
                  color="grey"
                  size="large"
                  plain
                  style="margin-top: -1px"
                >
                  {{userData.plate ? userData.plate : ''}}
                </van-tag>
              </van-col>
            </van-row>
          </view>
          <van-button 
            type="default" 
            bind:click="showUserDataList"
            wx:if="{{userDataList.length > 1}}"
          >
            切换车辆
          </van-button>
        </van-cell>
      </van-cell-group>
      <van-cell-group 
        inset
        style="margin-top: 6px"
        >
        <van-cell>
          <van-button  
            size="large"
            custom-style="margin: 16px 0; background-color: #f8d148"
            data-path="/pages/UserRecord/UserRecord"
            bind:click="switchPage"
            style="font-weight: 600"
          >
          <van-row>
            <van-col>
              <van-icon 
                name="/icons/shell.png"
                size="18px"
                style="margin-right: 4px"
              />
            </van-col>
            <van-col>
              <view>
                查看养护记录
              </view>
            </van-col>
          </van-row>
          </van-button>
        </van-cell>
      </van-cell-group>
      <van-cell-group 
        style="margin: 6px 16px 0 16px"
        wx:if="{{upcomingReminder}}"
        >
        <!-- <van-cell
          icon="bullhorn-o"
          border="{{false}}"
          size="large"
          custom-style="font-size: 16px; font-weight: 600"
          title="近期养护提醒：{{upcomingReminder.content}}"
        > -->
        <van-notice-bar
          color="#808080"
          background="#ffffff"
          left-icon="volume-o"
          scrollable
          text="近期养护提醒：请于 {{upcomingReminder.schedule}} 前来门店{{upcomingReminder.content}}"
        />
        <!-- </van-cell>
        <van-cell
          icon="calendar-o"
          border="{{false}}"
          title="建议于 {{upcomingReminder.schedule}} 前完成养护"
        >
        </van-cell> -->
      </van-cell-group>
      <view
        style="margin-top: 6px; padding: 0 6px"
      >
        <van-grid 
          gutter="10" 
          column-num="3" 
          clickable
          style="font-weight: 600; --grid-item-text-font-size: 14px"
        >
          <van-grid-item 
            icon="link-o" 
            text="关联账号"
            id="manual-check" 
            bind:click="checkNonUidDataWithPhone"/>
          <van-grid-item 
            icon="search" 
            text="输入查询" 
            bind:tap="showOrHideManualSearchForm" />
          <van-grid-item 
            icon="phone-o" 
            text="联系我们"
            bind:tap="showOrHideContactPopup" />
        </van-grid>
      </view>
    </view>
    <view style="display: flex; flex-direction: column" wx:else>
      <van-cell-group 
        inset
        style="margin-top: 6px"
        >
        <van-cell
          title="您的微信还未关联至养护记录，试试手机号码？"
          center="true"
          icon="warning-o"
        >
        </van-cell>
      </van-cell-group>
      <van-cell-group 
        inset
        style="margin-top: 6px"
        >
        <van-cell>
          <van-button 
            icon="phone" 
            size="large"
            custom-style="margin: 16px 0; background-color: #f8d148; font-weight: 600"
            open-type="getPhoneNumber"
            bindgetphonenumber="getPhoneAuthCode"
          >
          通过手机号码关联养护记录
          </van-button>
        </van-cell>
      </van-cell-group>
      <view
        style="margin-top: 6px; padding: 0 6px"
      >
        <van-grid 
          gutter="10" 
          column-num="1" 
          clickable
          style="font-weight: 600; --grid-item-text-font-size: 14px">
          <van-grid-item 
            icon="search" 
            text="手动输入查询" 
            bind:tap="showOrHideManualSearchForm" />
          <van-grid-item 
            icon="phone-o" 
            text="联系我们"
            bind:tap="showOrHideContactPopup" />
        </van-grid>
      </view>
    </view>
  </view>
  <!-- 重新登录等待 -->
  <view 
    style="display: flex; flex-direction: column; margin-top: -80px"
    wx:elif="{{retryCountdown > 0}}"
  >
    <van-cell-group 
      inset
      style="margin-top: 6px"
      >
      <van-cell
        title="点击同意授权，就能解锁爱车的养护记录了！"
        center="true"
        icon="warning-o"
      >
      </van-cell>
    </van-cell-group>
    <van-cell-group 
      inset
      style="margin-top: 6px"
      >
      <van-cell>
        <van-button 
          size="large"
          custom-style="margin: 16px 0; background-color: #f8d148; font-weight: 600"
          disabled
          loading
          loading-type="spinner"
          loading-text="重试登录（{{retryCountdown}}秒后）"
        >
        </van-button>
      </van-cell>
    </van-cell-group>
    <view
      style="margin-top: 6px; padding: 0 6px"
    >
      <van-grid 
        gutter="10" 
        column-num="1" 
        clickable
        style="font-weight: 600; --grid-item-text-font-size: 14px"
      >
        <van-grid-item 
          icon="search" 
          text="手动输入查询" 
          bind:tap="showOrHideManualSearchForm" />
        <van-grid-item 
          icon="phone-o" 
          text="联系我们"
          bind:tap="showOrHideContactPopup" />
      </van-grid>
    </view>
  </view>
  <!-- 未登录 -->
  <view 
    style="display: flex; flex-direction: column; margin-top: -80px" 
    wx:else
  >
    <van-cell-group 
      inset
      style="margin-top: 6px"
      >
      <van-cell
        title="登录微信，一键查看爱车的养护记录！"
        center="true"
        icon="chat-o"
      >
      </van-cell>
    </van-cell-group>
    <van-cell-group 
      inset
      style="margin-top: 6px"
      >
      <van-cell>
        <van-button 
          icon="wechat" 
          size="large"
          custom-style="margin: 16px 0; background-color: #f8d148; font-weight: 600"
          bind:click="setUserData"
        >
        微信登录
        </van-button>
      </van-cell>
    </van-cell-group>
    <view
      style="margin-top: 6px; padding: 0 6px"
    >
      <van-grid 
        gutter="10" 
        column-num="1" 
        clickable
        style="font-weight: 600; --grid-item-text-font-size: 14px"
      >
        <van-grid-item 
          icon="search" 
          text="手动输入查询" 
          bind:tap="showOrHideManualSearchForm" />
        <van-grid-item 
          icon="phone-o" 
          text="联系我们"
          bind:tap="showOrHideContactPopup" />
      </van-grid>
    </view>
  </view>

<!-- 管理员身份 -->
  <view wx:if="{{isAdmin}}">
    <van-divider contentPosition="center">
      管理员操作
    </van-divider>
    <view
        style="margin-top: 6px; padding: 0 6px"
      >
      <van-grid 
        gutter="10" 
        column-num="3" 
        clickable
        style="font-weight: 600; --grid-item-text-font-size: 14px"
      >
        <van-grid-item 
          icon="todo-list-o" 
          text="查询客户" 
          bind:click="showFindUserForm"/>
        <van-grid-item 
          icon="add-o" 
          text="创建客户" 
          bind:tap="showCreateUserForm" />
      </van-grid>
    </view>
    <van-divider />

    <!-- 查询用户弹窗 -->
    <van-popup 
      show="{{ findUserFormIsShow }}" 
      round
      position="bottom"
      custom-style="padding: 20px 10px; font-weight: 600"
      bind:close="hideFindUserForm">
      <view style="padding: 0 16px 16px 16px; font-size: 18px">查询客户</view>
      <view style="padding: 0 16px 8px 16px; display: flex; flex-direction: row">
        <view>
          <van-button 
            size="small"
            custom-style="font-size: 16px; margin-right: 4px"
            color="#f8d148"
            plain
            wx:if="{{findUserFilter == 'plate'}}"
          >
            车牌号码
          </van-button>
          <van-button 
            data-filter="plate"
            size="small"
            custom-style="font-size: 16px; margin-right: 4px"
            color="#cccccc"
            plain
            type="default"
            bind:click="changeFindUserFilter"
            wx:else
          >
            车牌号码
          </van-button>
        </view>
        <view >
          <van-button 
            size="small"
            custom-style="font-size: 16px; margin-right: 4px"
            color="#f8d148"
            plain
            wx:if="{{findUserFilter == 'phone'}}"
          >
            手机号码
          </van-button>
          <van-button 
            data-filter="phone"
            size="small"
            custom-style="font-size: 16px; margin-right: 4px"
            color="#cccccc"
            plain
            type="default"
            bind:click="changeFindUserFilter"
            wx:else
          >
            手机号码
          </van-button>
        </view>
        <view >
          <van-button 
            size="small"
            custom-style="font-size: 16px"
            color="#f8d148"
            plain
            wx:if="{{findUserFilter == 'record_num'}}"
          >
            换油证号
          </van-button>
          <van-button 
            data-filter="record_num"
            size="small"
            custom-style="font-size: 16px"
            color="#cccccc"
            plain
            type="default"
            bind:click="changeFindUserFilter"
            wx:else
          >
            换油证号
          </van-button>
        </view>
      </view>
      <van-field
        value="{{ findUserInput }}"
        custom-style="font-size: 16px"
        id="find-user-input"
        left-icon="{{ findUserFilter == 'plate' ? '/icons/plate.png' : findUserFilter == 'phone' ? '/icons/mobile.png' : findUserFilter == 'record_num' ? '/icons/id.png' : ''}}"
        placeholder="请输入{{findUserInputPlaceholder}}"
        bind:change="onChange"
      />
      <van-button 
        custom-style="margin-left: 16px; width: calc(50% - 16px); margin-top: 10px; font-size: 16px; background-color: #f8d148"
        bind:click="findUserWithFilterAndValue"
      >
        查询
      </van-button>
      <van-button 
        type="default"
        custom-style="width: calc(50% - 16px); margin-top: 10px; font-size: 16px"
        bind:click="hideFindUserForm"
      >
        取消
      </van-button>
    </van-popup>

    <!-- 创建用户弹窗 -->
     <van-popup 
      show="{{ createUserFormIsShow }}" 
      round
      position="bottom"
      custom-style="padding: 20px 10px; font-weight: 600"
      bind:close="hideCreateUserForm">
      <view style="padding: 0 16px 16px 16px; font-size: 18px">创建客户</view>
      <van-cell-group border="{{false}}">
        <van-cell 
          title="门店" 
          icon="shop"
          value="{{ newUserInput.location }}"
          id="create-location"
          custom-style="font-size: 16px"
          bind:click="showLocationPicker"
        />
        <van-field
          value="{{newUserInput.user_name}}"
          id="create-user-name"
          custom-style="font-size: 16px"
          left-icon="user"
          label="车主姓名"
          placeholder="请输入"
          input-align="right"
          bind:change="onChange"
        />
        <van-field
          value="{{newUserInput.phone}}"
          id="create-phone"
          custom-style="font-size: 16px"
          left-icon="/icons/mobile.png"
          label="联系方式"
          type="number"
          placeholder="请输入"
          input-align="right"
          bind:change="onChange"
        />
        <van-field
          value="{{newUserInput.make}}"
          id="create-make"
          custom-style="font-size: 16px"
          left-icon="/icons/car.png"
          label="车型"
          placeholder="请输入"
          input-align="right"
          bind:change="onChange"
        />
        <van-field
          value="{{newUserInput.plate}}"
          id="create-plate"
          custom-style="font-size: 16px"
          left-icon="/icons/plate.png"
          label="车牌号"
          placeholder="请输入"
          input-align="right"
          bind:change="onChange"
        />
        <van-button 
          bind:click="createUser"
          custom-style="margin-left: 16px; width: calc(50% - 16px); margin-top: 10px; font-size: 16px; background-color: #f8d148"
        >
          创建
        </van-button>
        <van-button 
          type="default"
          bind:click="hideCreateUserForm"
          custom-style="width: calc(50% - 16px); margin-top: 10px; font-size: 16px"
        >
          取消
        </van-button>
      </van-cell-group>
    </van-popup>
  </view>

  <van-popup 
    show="{{ findUserListIsShow }}" 
    round
    position="bottom"
    custom-style="height: fit-content; max-height: 50vh; padding: 20px 0"
    bind:close="hideFindUserList">
    <view style="padding: 0 16px 8px 16px; font-size: 18px">找到多个客户</view>
    <block 
      wx:for="{{findUserList}}" 
      wx:key="unique"
      style="{{height: '50vh', overFlow: 'hidden'}}"
    >
      <van-cell-group 
        inset 
        border="{{false}}"
        data-listed-user="{{item}}"
        custom-style="margin: 2px"
        title="{{item.record_num}}"
        bind:tap="takeUserDataToAdminPage">
        <van-cell 
          title="{{item.user_name}}" 
          label="{{item.phone}}"
          value="{{item.plate}} " 
          custom-style="font-size: 16px; font-weight: 600; --cell-label-font-size: 14px"
          center
        />
      </van-cell-group>
    </block>
  </van-popup>

  <van-popup
    round
    position="bottom"
    show="{{locationPickerIsShow}}">
    <van-picker
      show-toolbar
      title="门店选择"
      columns="{{ locationNameList }}"
      bind:confirm="confirmLocationPick"
      bind:cancel="closeLocationPicker"
    />
  </van-popup>

  <van-popup 
    show="{{ userDataListIsShow }}" 
    round
    position="bottom"
    custom-style="height: fit-content; padding: 20px 0"
    bind:close="hideUserDataList">
    <view style="padding: 0 16px 16px 32px; font-size: 18px; font-weight: 600">请选择爱车</view>
    <block wx:for="{{userDataList}}" wx:key="unique">
      <van-cell-group 
        inset 
        border="{{false}}"
        data-listed-user="{{item}}"
        title="{{item.record_num}}"
        bind:tap="selectFromUserDataList">
        <van-cell 
          title="{{item.make}}" 
          value="{{item.plate}} " 
          custom-style="font-size: 16px; font-weight: 600"
          center
        />
      </van-cell-group>
    </block>
  </van-popup>
  <van-popup 
    show="{{ manualSearchIsShow }}" 
    position="bottom"
    round
    custom-style="height: fit-content; padding: 20px 10px; font-weight: 600"
    bind:close="showOrHideManualSearchForm">
    <view style="padding: 0 16px 16px 16px; font-size: 18px">手动输入查询</view>
    <van-cell-group border="{{false}}">
      <van-field
        value="{{ userInputPlateAndPhone.plate }}"
        id="manual-search-plate"
        custom-style="font-size: 16px"
        left-icon="/icons/plate.png"
        label="车牌号码"
        placeholder="请输入"
        bind:change="onChange"
      />
      <van-field
        value="{{ userInputPlateAndPhone.phone }}"
        id="manual-search-phone"
        custom-style="font-size: 16px"
        left-icon="/icons/mobile.png"
        label="联系方式"
        placeholder="请输入"
        bind:change="onChange"
      />
      <van-button 
        custom-style="margin-left: 16px; width: calc(50% - 16px); margin-top: 10px; font-size: 16px; background-color: #f8d148"
        bind:click="manualSearchSubmit"
      >
        查询
      </van-button>
      <van-button 
        type="default"
        custom-style="width: calc(50% - 16px); margin-top: 10px; font-size: 16px"
        bind:click="showOrHideManualSearchForm"
      >
        取消
      </van-button>
    </van-cell-group>
  </van-popup>

  <van-popup 
    show="{{ isShowContactPopup }}" 
    position="bottom"
    round
    custom-style="height: fit-content; max-height: 50vh; padding: 20px 10px"
    bind:close="showOrHideContactPopup">
    <view style="padding: 0 16px 16px 16px; font-size: 18px; font-weight: 600">点击联系门店</view>
    <van-cell-group
      border="{{false}}"
      wx:for="{{ locationList }}"
      wx:key="unique">
      <van-cell
        clickable
        data-phone="{{ item.phone }}"
        size="large"
        bind:tap="callLocation"
      >
        <view slot="title">
          <van-row
            style="font-size: 16px; font-weight: 600"
            >
            <van-col span="22">
              <view>
                {{item.location}}
              </view>
            </van-col>
            <van-col span="2">
              <van-icon 
                name="phone-o"
                size="20px"
                style="padding: 2px; color: #808080; background: none; border: 1px solid #808080; border-radius: 4px;"
              />
            </van-col>
          </van-row>
          <van-row
            style="color: #aaaaaa"
            >
            <view>
              <van-icon name="location-o"/>
              {{item.city}}
            </view>
          </van-row>
        </view>
      </van-cell>
    </van-cell-group>
  </van-popup>

  <van-dialog id="van-dialog" />
  <van-toast id="van-toast" />

</view>